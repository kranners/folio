---
import MainHead from "../components/MainHead.astro";
import Signature from "../components/Signature/index.astro";
import Logomark from "../components/Logomark/index.svelte";
import Roles from "../components/Roles/index.jsx";
import Companies from "../components/Companies/index.jsx";
import CallToAction from "../components/CallToAction/index.jsx";
import FrappuccinoLink from "../components/FrappuccinoLink/index.astro";
import SecretGuy from "../components/SecretGuy/index.astro";

import Section from "../components/Section/index.astro";
---

<html>
  <head>
    <MainHead title="ajrp" description="aaron pierce: software guy" />
  </head>
  <body>
    <Logomark client:load="svelte" />
    <div class="h-screen w-screen snap-y snap-mandatory overflow-y-scroll">
      <SecretGuy />

      <Section backgroundColor="#F9F9F9">
        <Signature />
      </Section>
      <Section backgroundColor="#FEE3AC">
        <Roles client:load="react" />
      </Section>
      <Section backgroundColor="#B5DCF0" framework="react">
        <Companies />
      </Section>
      <Section backgroundColor="#AECEA6">
        <FrappuccinoLink /> 
      </Section>
      <Section backgroundColor="#E3C9D6" framework="preact">
        <CallToAction />
      </Section>
    </div>
  </body>
</html>
